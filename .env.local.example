# hazo_chat Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================

# Supabase URL (get from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here

# Supabase Anonymous Key (get from Supabase dashboard)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# =============================================================================
# API Configuration
# =============================================================================

# API base URL for chat service
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# =============================================================================
# Feature Flags
# =============================================================================

# Enable debug mode (shows additional console logs)
NEXT_PUBLIC_DEBUG_MODE=false

# Enable mock data for development
NEXT_PUBLIC_USE_MOCK_DATA=false

# =============================================================================
# Authentication
# =============================================================================

# JWT secret for signing tokens (server-side only)
JWT_SECRET=your_jwt_secret_here

# Session duration in seconds (default: 7 days)
SESSION_DURATION=604800
