{
  "name": "hazo_chat",
  "version": "5.2.1",
  "description": "Chat interface for group-based communication with API-first architecture",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./lib": {
      "import": "./dist/lib/index.js",
      "types": "./dist/lib/index.d.ts"
    },
    "./components": {
      "import": "./dist/components/index.js",
      "types": "./dist/components/index.d.ts"
    },
    "./api": {
      "import": "./dist/api/index.js",
      "types": "./dist/api/index.d.ts"
    },
    "./api/messages": {
      "import": "./dist/api/messages.js",
      "types": "./dist/api/messages.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "SETUP_CHECKLIST.md"
  ],
  "workspaces": [
    "test-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev:package": "tsc -p tsconfig.build.json --watch",
    "dev:test-app": "npm run build && cd test-app && npm run dev",
    "build:test-app": "npm run build && cd test-app && npm run build",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pub12/hazo_chat.git"
  },
  "keywords": [
    "chat",
    "interface",
    "react",
    "typescript",
    "nextjs"
  ],
  "author": "Pubs Abayasiri",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pub12/hazo_chat/issues"
  },
  "homepage": "https://github.com/pub12/hazo_chat#readme",
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "hazo_config": "^1.0.0",
    "hazo_pdf": "^1.0.0",
    "react-icons": "^5.3.0",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "hazo_logs": "^1.0.9",
    "next": "^14.2.33",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "hazo_connect": "^2.3.1",
    "hazo_logs": "^1.0.9",
    "next": ">=14.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "hazo_connect": {
      "optional": true
    },
    "next": {
      "optional": false
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "overrides": {
    "lucide-react": "^0.553.0"
  }
}
